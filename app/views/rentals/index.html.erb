<div class="container text-center my-4">
  <h1>Upcoming rentals</h1>
  <div class="row">
    <nav>
      <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active" id="nav-rentals-tab" data-bs-toggle="tab" data-bs-target="#nav-rentals" type="button" role="tab" aria-controls="nav-rentals" aria-selected="true">rentals dont je suis locataire</button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">rentals dont je suis proprio</button>
        <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab" aria-controls="nav-contact" aria-selected="false">offers dont je suis proprio</button>
      </div>
    </nav>
  <div class="tab-content mt-3" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-rentals" role="tabpanel" aria-labelledby="nav-rentals-tab">
      <div class="container">
        <% current_user.rentals.each do |rental| %>
          <div class="col-sm-6 col-md-4 mb-3">
            <%= link_to rental, class:"card-offer-link" do %>
              <div class="card-offer">
                <% if rental.offer.photo.attached? %>
                  <%= cl_image_tag rental.offer.photo.key %>
                <% else %>
                  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
                <% end %>
                <div class="card-offer-infos">
                  <div>
                    <h2><%= rental.offer.name %></h2>
                    <p><%= rental.offer.description %></p>
                  </div>
                  <h2 class="card-offer-pricing"><%= '%.2f' % rental.total_amount %>‚Ç¨</h2>
                  <% if current_user.photo.attached? %>
                    <%= cl_image_tag current_user.photo.key, class:"card-offer-user avatar-bordered" %>
                  <% else %>
                    <img src="https://media.istockphoto.com/vectors/default-profile-picture-avatar-photo-placeholder-vector-illustration-vector-id1223671392?k=20&m=1223671392&s=612x612&w=0&h=lGpj2vWAI3WUT1JeJWm1PRoHT3V15_1pdcTn2szdwQ0=" class="card-offer-user avatar-bordered" />
                  <% end %>
                </div>
              </div>
            <% end %>
            <div class="mb-3 d-flex justify-content-end">
              <div class = "card-offer-edit">
                <div class = "ml-2">
                  <%= link_to edit_rental_path(rental) do %>
                    <i class="fas fa-pen"></i>
                  <% end %>
                  <%= link_to rental_path(rental), method: :delete, data: { confirm: "Are you sure ?"} do%>
                    <i class="fas fa-trash-alt"></i>

                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">

      <% current_user.offers.each do |offer| %>
        <div class="col-sm-6 col-md-6 mb-3">
          <div class="card-offer">
            <% if offer.photo.attached? %>
              <%= cl_image_tag offer.photo.key %>
            <% else %>
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
            <% end %>
            <div class="card-offer-infos">
              <div>
                <h2><%= offer.name %></h2>
                <p><%= offer.description %></p>
                <p>üìç <strong><%= offer.address %></strong></p>
              </div>
              <h2 class="card-offer-pricing"><%= '%.2f' % offer.price %>‚Ç¨/day</h2>
              <% if offer.user.photo.attached? %>
                <%= cl_image_tag offer.user.photo.key, class:"card-offer-user avatar-bordered" %>
              <% else %>
                <img src="https://media.istockphoto.com/vectors/default-profile-picture-avatar-photo-placeholder-vector-illustration-vector-id1223671392?k=20&m=1223671392&s=612x612&w=0&h=lGpj2vWAI3WUT1JeJWm1PRoHT3V15_1pdcTn2szdwQ0=" class="card-offer-user avatar-bordered" />
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
  </div>
</div>
