<div class="container col-md-6 mt-5">
  <h2 class="text-center mb-5">Sign up</h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: "First name" %>
      <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: "Last name" %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, label: false, placeholder: "Email address" %>
      <%= f.input :phone_number, required: true, autofocus: true, label: false, placeholder: "Phone number" %>
      <%= f.input :profile_picture_url, required: true, autofocus: true, label: false, placeholder: "Profile picture url" %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" }, label: false, placeholder: "Password" %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" }, label: false, placeholder: "Password confirmation" %>
    </div>
    <div class="form-actions text-center">
      <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="class text-center mt-3">
    <%= render "devise/shared/links", class: "text-center" %>
  </div>
</div>
