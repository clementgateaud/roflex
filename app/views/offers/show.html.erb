<div class="container mt-5">
  <div class="row">
    <div class="col-sm-6">
      <%= cl_image_tag @offer.photo.key, class:"img-show w-100 mb-3" %>
    </div>
    <div class="col-sm-6">
    <div class="info-container">
      <h1 class="title"><%= @offer.name %></h1>
      <p><%= @offer.description %></p>
      <p>Price per day: <strong><span id="priceperday"><%= '%.2f' % @offer.price %></span> €</strong></p>
    </div>
    <div class="action-container" data-controller="dynamicprice">
      <%= simple_form_for @rental do |f| %>
        <%= f.input :start_time, as: :date, html5: true,label: "Start date", input_html:{value: Date.today, data:{action:"change->dynamicprice#updatePrice"}} %>
        <%= f.input :end_time, as: :date, html5: true, label: "End date", input_html:{value: Date.today, data:{action:"change->dynamicprice#updatePrice"}} %>
        <%= hidden_field_tag :offer_id, @offer.id %>
        <p>Total price: <span data-dynamicprice-target="price" id="realprice"><%= @offer.price %> €</span></p>
        <%= f.submit "Rent it", class:"btn btn-primary", id:"rent-btn" %>
      <% end %>
    </div>
    </div>
  </div>
</div>
