<div class="container mt-5 text-center">
  <h1> Hello <%= current_user.username %> !</h1>

  <% if current_user.photo.attached? %>
    <%= cl_image_tag current_user.photo.key, class:"avatar-profile" %>
  <% end %>

  <div class="user-info">
    <ul>
      <li>First name: <%= current_user.first_name %></li>
      <li>Last name: <%= current_user.last_name %></li>
      <li><%= current_user.email %></li>
      <li><%= current_user.phone_number %></li>
    </ul>
  </div>
  <div class="mb-5">
    <%= link_to "Edit your profile", edit_user_registration_path, class:"btn btn-rent" %>
    <%= link_to "Back to home", root_path, class:"btn btn-rent" %>
  </div>
</div>
